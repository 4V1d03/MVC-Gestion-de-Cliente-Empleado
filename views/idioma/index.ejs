<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Idiomas</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>

    <div class="container mt-5">
        <h2 class="text-center">Lista de Idiomas</h2>

        <div class="d-flex justify-content-between mb-3">
            <a href="/Empleado" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Agregar Idioma
            </a>
            <a href="/Empleado" class="btn btn-secondary">
                <i class="bi bi-people"></i> Volver a Empleados
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Código Idioma</th>
                        <th>Código Empleado</th>
                        <th>Idioma</th>
                        <th>Tiempo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% empleados.forEach((dato) => { %>
                        <tr>
                            <td><%= dato.codigoIdioma %></td>
                            <td><%= dato.codigoEmp %></td>
                            <td><%= dato.nombreIdioma %></td>
                            <td><%= dato.tiempo %> años</td>
                            <td>
                                <a href="/editar3/<%= dato.codigoIdioma %>" class="btn btn-warning btn-sm" title="Editar">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a href="/ver3/<%= dato.codigoIdioma %>" class="btn btn-info btn-sm text-white" title="Ver">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="/eliminar3/<%= dato.codigoIdioma %>" class="btn btn-danger btn-sm" title="Eliminar" onclick="return confirm('¿Estás seguro de eliminar este idioma?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
